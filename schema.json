    "WeightRecord": {
      "properties": {
        "weight": "number",
        "date": "string",
        "note": "string"
      }
    },
    "Vaccination": {
      "properties": {
        "type": "string",
        "date": "string",
        "expirationDate": "string"
      }
    }
  }
