    "Patient": {
      "properties": {
        "id": "string",
        "name": "string",
        "species": "string",
        "breed": "string",
        "gender": "string",
        "birthDate": "string",
        "microchipNumber": "string",
        "appointments": "array(Appointment)",
        "weightHistory": "array(WeightRecord)",
        "vaccinations": "array(Vaccination)"
      }
